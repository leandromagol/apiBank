{
  "require": {
    "php": "^8.0",
    "slim/slim": "4.*",
    "slim/psr7": "^1.7",
    "ext-pdo": "*",
    "php-di/php-di": "^7.0"
    },
  "require-dev": {
    "pestphp/pest": "^2.0",
    "pestphp/pest-plugin": "*", 
    "phpunit/phpunit": "^10.0",
    "mockery/mockery": "^1.5"
    },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
